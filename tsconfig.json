{
	"compilerOptions": {
		"rootDir": "./src",
		"outDir": "dist",

		"declaration": true,

		"lib": ["es2021"],
		"module": "ES6",
		"target": "es2021",

		"strict": true,
		"esModuleInterop": true,
		"moduleResolution": "node",
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true
	},
	"include": ["src/**/*.ts"]
}
